server {
    listen 80;
    root /var/www/prod/website;
    index index.html index.htm;
    server_name {{ default_domain }};
    access_log on;
    error_log /dev/null crit;
    if ($host != "{{ default_domain }}") {
       return 404;
    }
    location / {
    }
}

