upstream gpit {
    server localhost:80;
    keepalive 300;
}

server {
    listen 8001;
    server_name gpit.com.br;
    access_log off;
    error_log /dev/null crit;
    if ($host != "gpit.com.br") {
        return 404;
    }
    location / {
        proxy_pass http://gpit;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    proxy_set_header  X-Forwarded-Host $host;
    }
}

